<div class="profile-container">
  <% if @user %>
    <div class="profile-header">
      <div class="row">
        <div class="col-md-3 text-center">
          <div class="profile-picture-container">
            <div class="profile-picture">
              <%= @user['username']&.first&.upcase || 'U' %>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="profile-info">
            <div class="d-flex align-items-center mb-3">
              <h2 class="profile-username mb-0 me-3"><%= @user['username'] %></h2>
              <%= link_to "Edit Profile", fyp_edit_profile_path, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "Logout", home_logout_path, class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete } %>
            </div>
            
            <div class="profile-stats mb-4">
              <div class="stat-item">
                <span class="stat-number">0</span>
                <span class="stat-label">posts</span>
              </div>
              <div class="stat-item">
                <%= link_to fyp_friends_path(is_followers: true), class: "stat-link" do %>
                  <span class="stat-number"><%= @followers_count %></span>
                  <span class="stat-label">followers</span>
                <% end %>
              </div>
              <div class="stat-item">
                <%= link_to fyp_friends_path(is_followers: false), class: "stat-link" do %>
                  <span class="stat-number"><%= @following_count %></span>
                  <span class="stat-label">following</span>
                <% end %>
              </div>
            </div>
            
            <div class="profile-details">
              <div class="profile-name mb-2">
                <strong><%= @user['username'] %></strong>
              </div>
              <% if @user['bio'].present? %>
                <div class="profile-bio mb-2">
                  <%= @user['bio'] %>
                </div>
              <% end %>
              <% if @user['city'].present? || @user['state'].present? %>
                <div class="profile-location mb-2">
                  üìç <%= [@user['city'], @user['state']].compact.join(', ') %>
                </div>
              <% end %>
              <% if @user['age'].present? %>
                <div class="profile-age mb-2">
                  Age: <%= @user['age'] %>
                </div>
              <% end %>
              <% if @user['email'].present? %>
                <div class="profile-email mb-2">
                  ‚úâÔ∏è <%= @user['email'] %>
                </div>
              <% end %>
              <% if @user['phone_no'].present? %>
                <div class="profile-phone mb-2">
                  üìû <%= @user['phone_no'] %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <hr class="my-4">

    <div class="profile-posts-section">
      <div class="d-flex justify-content-center mb-3">
        <%= link_to fyp_create_post_path, method: :get, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi bi-plus-lg"></i> New Post
        <% end %>
      </div>

      <% if @posts && @posts.any? %>
        <div class="row g-3">
          <% @posts.each do |post| %>
            <% post_id = post['post_id'] || post['id'] %>
            <div class="col-md-4 col-sm-6">
              <div class="card h-100" style="border-radius: 12px; border: 1px solid #e0e0e0; transition: transform 0.15s, box-shadow 0.15s; cursor: pointer;" onmouseover="this.style.transform='translateY(-3px)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.1)';" onmouseout="this.style.transform='none'; this.style.boxShadow='none';">
                <% if post_id.present? %>
                  <%= link_to fyp_post_path(post_id), style: "text-decoration: none; color: inherit;" do %>
                    <div class="card-body d-flex flex-column" style="padding: 1.25rem;">
                      <h5 class="card-title mb-2" style="font-weight: 600; font-size: 0.95rem;"><%= truncate(post['title'] || 'Untitled', length: 40) %></h5>
                      <% if post['content'].present? %>
                        <p class="card-text text-muted mb-3" style="font-size: 0.85rem; flex-grow: 1;"><%= truncate(post['content'], length: 80) %></p>
                      <% end %>
                      <% if post['event_name_mention'].present? %>
                        <span class="badge" style="background-color: #e8f4f8; color: #1a7fa0; font-size: 0.75rem; align-self: flex-start;"><%= post['event_name_mention'] %></span>
                      <% end %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="card-body d-flex flex-column" style="padding: 1.25rem;">
                    <h5 class="card-title mb-2" style="font-weight: 600; font-size: 0.95rem;"><%= truncate(post['title'] || 'Untitled', length: 40) %></h5>
                    <% if post['content'].present? %>
                      <p class="card-text text-muted mb-3" style="font-size: 0.85rem; flex-grow: 1;"><%= truncate(post['content'], length: 80) %></p>
                    <% end %>
                    <% if post['event_name_mention'].present? %>
                      <span class="badge" style="background-color: #e8f4f8; color: #1a7fa0; font-size: 0.75rem; align-self: flex-start;"><%= post['event_name_mention'] %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center text-muted py-4">
          <p>No posts yet.</p>
        </div>
      <% end %>
    </div>

  <% else %>
    <div class="alert alert-warning">
      Please log in to view your profile.
    </div>
  <% end %>
</div>
