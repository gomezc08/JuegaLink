<div class="profile-container">
  <% if @user %>
    <div class="profile-header">
      <div class="row">
        <div class="col-md-3 text-center">
          <div class="profile-picture-container">
            <div class="profile-picture">
              <%= @user['username']&.first&.upcase || 'U' %>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="profile-info">
            <div class="d-flex align-items-center mb-3">
              <h2 class="profile-username mb-0 me-3"><%= @user['username'] %></h2>
              <%= link_to "Edit Profile", fyp_edit_profile_path, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "Logout", home_logout_path, class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete } %>
            </div>
            
            <div class="profile-stats mb-4">
              <div class="stat-item">
                <span class="stat-number">0</span>
                <span class="stat-label">posts</span>
              </div>
              <div class="stat-item">
                <%= link_to fyp_friends_path(is_followers: true), class: "stat-link" do %>
                  <span class="stat-number"><%= @followers_count %></span>
                  <span class="stat-label">followers</span>
                <% end %>
              </div>
              <div class="stat-item">
                <%= link_to fyp_friends_path(is_followers: false), class: "stat-link" do %>
                  <span class="stat-number"><%= @following_count %></span>
                  <span class="stat-label">following</span>
                <% end %>
              </div>
            </div>
            
            <div class="profile-details">
              <div class="profile-name mb-2">
                <strong><%= @user['username'] %></strong>
              </div>
              <% if @user['bio'].present? %>
                <div class="profile-bio mb-2">
                  <%= @user['bio'] %>
                </div>
              <% end %>
              <% if @user['city'].present? || @user['state'].present? %>
                <div class="profile-location mb-2">
                  üìç <%= [@user['city'], @user['state']].compact.join(', ') %>
                </div>
              <% end %>
              <% if @user['age'].present? %>
                <div class="profile-age mb-2">
                  Age: <%= @user['age'] %>
                </div>
              <% end %>
              <% if @user['email'].present? %>
                <div class="profile-email mb-2">
                  ‚úâÔ∏è <%= @user['email'] %>
                </div>
              <% end %>
              <% if @user['phone_no'].present? %>
                <div class="profile-phone mb-2">
                  üìû <%= @user['phone_no'] %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <hr class="my-4">

    <div class="profile-posts-section">
      <div class="d-flex justify-content-center mb-3">
        <%= link_to fyp_create_post_path, method: :get, class: "btn btn-outline-secondary btn-sm" do %>
          <i class="bi bi-plus-lg"></i> New Post
        <% end %>
      </div>

      <% if @posts && @posts.any? %>
        <div class="row g-1">
          <% @posts.each do |post| %>
            <% post_id = post['post_id'] || post['id'] %>
            <div class="col-4">
              <% if post_id.present? %>
                <%= link_to fyp_post_path(post_id), class: "profile-post-link" do %>
                  <div class="profile-post-tile">
                    <% if post['image_url'].present? %>
                      <img src="<%= post['image_url'] %>" alt="Post" class="profile-post-img">
                    <% else %>
                      <div class="profile-post-placeholder">
                        <p class="profile-post-placeholder-text"><%= truncate(post['content'] || '', length: 60) %></p>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <div class="profile-post-link">
                  <div class="profile-post-tile">
                    <% if post['image_url'].present? %>
                      <img src="<%= post['image_url'] %>" alt="Post" class="profile-post-img">
                    <% else %>
                      <div class="profile-post-placeholder">
                        <p class="profile-post-placeholder-text"><%= truncate(post['content'] || '', length: 60) %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center text-muted py-4">
          <p>No posts yet.</p>
        </div>
      <% end %>
    </div>

  <% else %>
    <div class="alert alert-warning">
      Please log in to view your profile.
    </div>
  <% end %>
</div>
