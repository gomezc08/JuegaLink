<div class="profile-container">
  <% if @post %>
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card" style="border-radius: 12px; border: 1px solid #dbdbdb;">

          <!-- Post Header -->
          <div class="card-header d-flex align-items-center" style="background: none; border-bottom: 1px solid #efefef; padding: 14px 16px;">
            <%= link_to fyp_profile_path(username: @post['username']), class: "d-flex align-items-center text-decoration-none text-dark" do %>
              <div class="profile-picture" style="width: 32px; height: 32px; font-size: 14px; margin-right: 12px;">
                <%= @post['username']&.first&.upcase || 'U' %>
              </div>
              <strong><%= @post['username'] %></strong>
            <% end %>
          </div>

          <!-- Post Body -->
          <div class="card-body" style="padding: 16px;">
            <h5 style="font-weight: 700; margin-bottom: 8px;"><%= @post['title'] %></h5>
            <% if @post['content'].present? %>
              <p style="margin-bottom: 12px; white-space: pre-wrap;"><%= @post['content'] %></p>
            <% end %>
            <% if @post['event_name_mention'].present? %>
              <%= link_to fyp_event_page_path(event_name: @post['event_name_mention']), class: "notification-link" do %>
                <span class="badge" style="background-color: #e8f4f8; color: #1a7fa0; font-size: 0.8rem;"><i class="bi bi-calendar-event me-1"></i><%= @post['event_name_mention'] %></span>
              <% end %>
            <% end %>
          </div>

          <!-- Actions -->
          <div class="d-flex align-items-center" style="padding: 8px 16px; border-top: 1px solid #efefef; gap: 12px;">
            <% liked = @liked.present? %>
            <% if liked %>
              <%= form_with url: fyp_unlike_post_path, method: :post, local: true, class: "d-inline" do |form| %>
                <%= form.hidden_field :unlike_post_id, value: @post['post_id'] %>
                <%= form.button type: "submit", class: "border-0 bg-transparent p-0", style: "font-size: 1.4rem; cursor: pointer;" do %>
                  <i class="bi bi-heart-fill" style="color: #ed4956;"></i>
                <% end %>
              <% end %>
            <% else %>
              <%= form_with url: fyp_like_post_path, method: :post, local: true, class: "d-inline" do |form| %>
                <%= form.hidden_field :like_post_id, value: @post['post_id'] %>
                <%= form.button type: "submit", class: "border-0 bg-transparent p-0", style: "font-size: 1.4rem; cursor: pointer; color: #262626;" do %>
                  <i class="bi bi-heart"></i>
                <% end %>
              <% end %>
            <% end %>
            <a href="#" class="post-comment-btn" style="text-decoration: none; font-size: 1.4rem; color: #262626;">
              <i class="bi bi-chat"></i>
            </a>
          </div>

        <div class="card-footer text-center" style="background: none; border-top: 1px solid #efefef; padding: 12px 16px;">
            <%= form_with url: fyp_delete_post_path, method: :delete, local: true, class: "d-inline" do |form| %>
              <%= form.hidden_field :delete_post_id, value: @post['post_id'] %>
              <%= form.submit "Delete Post", class: "btn btn-outline-danger btn-sm w-100" %>
            <% end %>
        </div>

        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-warning">
      Post not found.
    </div>
  <% end %>
</div>
