<div class="edit-profile-container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card edit-profile-card">
        <div class="card-header edit-profile-header">
          <h2 class="mb-0">Create Post</h2>
        </div>
        <div class="card-body">
          <%= form_with url: fyp_create_post_path, method: :post, local: true, class: "profile-edit-form" do |form| %>
            <div class="mb-3">
              <%= form.label :title, "Title", class: "form-label" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Give your post a title", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :content, "Content", class: "form-label" %>
              <%= form.text_area :content, class: "form-control", rows: 4, placeholder: "What's on your mind?" %>
            </div>

            <div class="mb-3">
              <%= form.label :event_name_mention, "Mention an event", class: "form-label" %>
              <%= form.select :event_name_mention,
                options_for_select(
                  [["None", ""]] +
                  ((@events || [])).uniq { |e| e['event_name'] }.map { |e| [e['event_name'], e['event_name']] }
                ),
                {}, class: "form-select" %>
            </div>

            <div class="d-flex gap-2 mt-4">
              <%= link_to "Cancel", fyp_profile_path, class: "btn btn-secondary flex-fill" %>
              <%= form.submit "Create post", class: "btn btn-primary flex-fill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
