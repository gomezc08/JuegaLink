<div class="edit-profile-container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card edit-profile-card">
        <div class="card-header edit-profile-header">
          <h2 class="mb-0">Create Event</h2>
        </div>
        <div class="card-body">
          <%= form_with url: fyp_create_event_post_path, method: :post, local: true, class: "profile-edit-form" do |form| %>
            <div class="mb-3">
              <%= form.label :event_name, "Event name", class: "form-label" %>
              <%= form.text_field :event_name, class: "form-control", placeholder: "e.g. Pickup Game at the Park", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Description", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "What's this event about? Who should come?" %>
            </div>

            <div class="mb-3">
              <%= form.label :date_time, "Date & time", class: "form-label" %>
              <%= form.datetime_local_field :date_time, class: "form-control", required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :max_players, "Max players", class: "form-label" %>
              <%= form.number_field :max_players, class: "form-control", placeholder: "e.g. 10", min: 1, required: true %>
            </div>

            <div class="d-flex gap-2 mt-4">
              <%= link_to "Cancel", fyp_index_path, class: "btn btn-secondary flex-fill" %>
              <%= form.submit "Create event", class: "btn btn-primary flex-fill" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
