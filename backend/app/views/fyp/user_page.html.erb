<div class="profile-container">
  <% if @user %>
    <div class="profile-header">
      <div class="row">
        <div class="col-md-3 text-center">
          <div class="profile-picture-container">
            <div class="profile-picture">
              <%= @user['username']&.first&.upcase || 'U' %>
            </div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="profile-info">
            <div class="d-flex align-items-center mb-3">
              <h2 class="profile-username mb-0 me-3"><%= @user['username'] %></h2>
              <% if current_user && current_user['username'] != @user['username'] %>
                <% if @is_following %>
                  <%= form_with url: fyp_unfollow_path, method: :post, local: true, class: "d-inline" do |form| %>
                    <%= form.hidden_field :unfollow_username, value: @user['username'] %>
                    <%= form.submit "Unfollow", class: "btn btn-outline-secondary btn-sm" %>
                  <% end %>
                <% else %>
                  <%= form_with url: fyp_follow_path, method: :post, local: true, class: "d-inline" do |form| %>
                    <%= form.hidden_field :follow_username, value: @user['username'] %>
                    <%= form.submit "Follow", class: "btn btn-primary btn-sm" %>
                  <% end %>
                <% end %>
              <% elsif current_user && current_user['username'] == @user['username'] %>
                <%= link_to "Edit Profile", fyp_edit_profile_path, class: "btn btn-outline-secondary btn-sm" %>
              <% end %>
            </div>
            
            <div class="profile-stats mb-4">
              <div class="stat-item">
                <span class="stat-number">0</span>
                <span class="stat-label">posts</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">0</span>
                <span class="stat-label">followers</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">0</span>
                <span class="stat-label">following</span>
              </div>
            </div>
            
            <div class="profile-details">
              <div class="profile-name mb-2">
                <strong><%= @user['username'] %></strong>
              </div>
              <% if @user['bio'].present? %>
                <div class="profile-bio mb-2">
                  <%= @user['bio'] %>
                </div>
              <% end %>
              <% if @user['city'].present? || @user['state'].present? %>
                <div class="profile-location mb-2">
                  üìç <%= [@user['city'], @user['state']].compact.join(', ') %>
                </div>
              <% end %>
              <% if @user['age'].present? %>
                <div class="profile-age mb-2">
                  Age: <%= @user['age'] %>
                </div>
              <% end %>
              <% if @user['email'].present? %>
                <div class="profile-email mb-2">
                  ‚úâÔ∏è <%= @user['email'] %>
                </div>
              <% end %>
              <% if @user['phone_no'].present? %>
                <div class="profile-phone mb-2">
                  üìû <%= @user['phone_no'] %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  <% else %>
    <div class="alert alert-warning">
      User not found.
    </div>
  <% end %>
</div>
