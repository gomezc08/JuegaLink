<div class="friends-container">
  <div class="friends-header mb-4">
    <h2 class="friends-title"><%= @page_title %></h2>
    <%= link_to "â† Back to Profile", fyp_profile_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>

  <% if @friends_list && @friends_list.any? %>
    <div class="friends-list">
      <% @friends_list.each do |username| %>
        <div class="friend-card">
          <div class="friend-avatar">
            <%= username&.first&.upcase || 'U' %>
          </div>
          <div class="friend-info">
            <h4 class="friend-username">
              <%= link_to username, fyp_user_page_path(username: username), class: "friend-link" %>
            </h4>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="no-friends">
      <p class="no-friends-text">
        <% if @is_followers %>
          You don't have any followers yet.
        <% else %>
          You're not following anyone yet.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
